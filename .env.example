# ===================================
# ENVIRONMENT VARIABLES TEMPLATE
# ===================================
# Copy this file to .env.local and fill in your actual values

# ===================================
# SANITY CMS CONFIGURATION
# ===================================
NEXT_PUBLIC_SANITY_PROJECT_ID=your_project_id
NEXT_PUBLIC_SANITY_DATASET=production
NEXT_PUBLIC_SANITY_API_VERSION=2026-01-29

# Get your API token from: https://sanity.io/manage
# Token needs "Editor" permissions
SANITY_API_TOKEN=your_api_token_here

# Webhook secret for Sanity webhooks (generate a random string)
SANITY_WEBHOOK_SECRET=generate_random_string
REVALIDATE_SECRET=generate_random_string

# ===================================
# SITE CONFIGURATION
# ===================================
NEXT_PUBLIC_BASE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Admin user email
ADMIN_EMAIL=your_email@example.com

# ===================================
# ANALYTICS (Optional)
# ===================================
GOOGLE_ANALYTICS_ID=
NEXT_PUBLIC_GA_MEASUREMENT_ID=

# ===================================
# EMAIL SERVICES (Optional)
# ===================================
SENDGRID_API_KEY=
RESEND_API_KEY=

# ===================================
# STRIPE PAYMENTS (Optional)
# ===================================
STRIPE_SECRET_KEY=
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# ===================================
# REDIS CACHING (Optional)
# ===================================
REDIS_URL=
